---
layout: blog
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---



<div class="flex flex-col w-full">
	<div
			class="py-2 tracking-widest text-center bg-yellow-300 md:text-4xl"
		>
			{{tag}}
		
	</div>
	<table class="mt-8 ">
		<tbody>
    {% set taglist = collections[ tag ] %}
	
			{% for post in taglist | reverse %}
			{% set link = post.url | truncate(5) %}
			<tr>
				<td class="pb-2 font-bold text-gray-900 text-l">
					<a href="{{ post.url | url }}">
						{% if post.data.title %} {{ post.data.title }} {% else
						%} Untitled {% endif %}
					</a>
				</td>
				
				
				{% if link === '/page...' %}
					<td class="bg-blue-100">Doc</td>
					{% endif %}
				{% if link === '/post...' %}
					<td class="bg-green-100">Blog</td>
					{% endif %}
				
				<td
					class="pb-2 pl-4 text-base leading-6 text-right text-gray-500"
				>
					<time>
						{{ post.date | readableDate }}
					</time>
				</td>
			</tr>

			{% endfor %}
		</tbody>
	</table>
	</div>
 