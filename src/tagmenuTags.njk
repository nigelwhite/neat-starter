---
layout: blog
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tagmenu-tags/{{ tag }}/
---


<div class="flex flex-col md:flex-row md:m-20">
	<div
			class="text-3xl tracking-widest text-center transform bg-yellow-300 text-dir md:mt-20 md:p-4 md:text-6xl md:rotate-90 md:h-24"
		>
			{{tag}}
		
	</div>
<table class="w-full mt-4">
		<tbody>
    {% set pageTags = collections[ tag ] %}
			{% for post in pageTags | reverse %}

			<tr>
				<td class="pb-2 font-bold text-gray-900 text-l">
					<a href="{{ post.url | url }}">
						{% if post.data.title %} {{ post.data.title }} {% else
						%} Untitled {% endif %}
					</a>
				</td>
				<td
					class="pb-2 pl-4 text-base leading-6 text-right text-gray-500"
				>
					<time>
						{{ post.date | readableDate }}
					</time>
				</td>
			</tr>

			{% endfor %}
		</tbody>
	</table>
	</div>
 