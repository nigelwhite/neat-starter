---
layout: blog
pagination:
  data: collections.page
  size: 20
  alias: tag
permalink: /tagmenu-tags/{{ tag }}/
---


<div class="flex flex-col w-full">
	<div
			class="tracking-widest text-center bg-yellow-300 md:text-4xl "
		>
			{{tag}}
		
	</div>
<table class="w-full mt-8">
		<tbody>
    {# {% set pageTags = collections.pageTags %} #}
			{% for page in collections.page | reverse %}

			<tr>
				<td class="pb-2 font-bold text-gray-900 text-l">
					<a href="{{ page.url | url }}">
						{% if page.data.title %} {{ page.data.title }} {% else
						%} Untitled {% endif %}
					</a>
				</td>
				<td
					class="pb-2 pl-4 text-base leading-6 text-right text-gray-500"
				>
					<time>
						{{ page.date | readableDate }}
					</time>
				</td>
			</tr>

			{% endfor %}
		</tbody>
	</table>
	</div>
 